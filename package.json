{
  "name": "@lisk-builders/lisk-hd-key",
  "version": "1.0.0-rc.0",
  "description": "HD key derivation for Lisk coin",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc -p ./",
    "test:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test": "jest --watch --verbose"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "window": {},
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "./tsconfig.json"
      }
    }
  },
  "keywords": [
    "ed25519",
    "bip32",
    "lisk",
    "lisk-elements",
    "crypto",
    "hdkeys",
    "hdwallet"
  ],
  "author": "Aleksey Popov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lisk-builders/lisk-hd-key.git"
  },
  "bugs": {
    "url": "https://github.com/lisk-builders/lisk-hd-key/issues"
  },
  "homepage": "https://github.com/lisk-builders/lisk-hd-key",
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/node": "13.7.6",
    "coveralls": "3.0.9",
    "jest": "^25.1.0",
    "ts-jest": "25.2.1",
    "typescript": "3.8.2"
  },
  "dependencies": {
    "@liskhq/lisk-cryptography": "2.4.2",
    "@liskhq/lisk-transactions": "^3.0.2",
    "ed25519-hd-key": "1.1.2"
  }
}
